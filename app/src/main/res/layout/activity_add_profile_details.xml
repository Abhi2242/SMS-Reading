<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".AddProfileDetails">

    <RelativeLayout
        android:id="@+id/rl_cn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/tv_cn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="Company Name: "
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_cn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/tv_cn"
            android:layout_marginStart="22dp"
            android:textColor="@color/black"
            android:background="#E9EDEC"
            android:inputType="text"
            android:importantForAutofill="no"
            tools:ignore="LabelFor" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_cAcc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/rl_cn"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/tv_cAcc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="Company A/C No: "
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_cAcc"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/tv_cAcc"
            android:layout_marginStart="12dp"
            android:textColor="@color/black"
            android:background="#E9EDEC"
            android:inputType="number"
            android:importantForAutofill="no"
            tools:ignore="LabelFor" />

    </RelativeLayout>

    <Button
        android:id="@+id/btn_save_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Save"
        android:textSize="20sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>